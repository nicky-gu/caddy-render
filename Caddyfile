https://caddy-render-qxnw.onrender.com {
    tls {
        dns cloudflare {env.CLOUDFLARE_API_TOKEN}  # 确保你设置了 CLOUDFLARE_API_TOKEN 环境变量
        ca https://acme-v02.api.letsencrypt.org/directory
    }

    route {
        # 配置 Caddy 作为正向代理
        forward_proxy {
            # 不需要日志输出
        }

        # 使用反向代理配置
        reverse_proxy {
            header_up -Proxy-Authorization
        }
    }
}
